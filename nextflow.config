params {
  profile = false
  cache = ''
  iterations = 10
  buffer_size = 2
  min_snps_per_iteration = 2
  max_snps_per_iteration = 20
}

profiles {
  conda {
     process.conda = "$baseDir/environments/environment.yml"
     if (params.cache){
       conda.cacheDir = params.cache
     }
  }
}

process {

}

